# Template de colores para Alacritty generado por Hogyoku (TOML)
# Incluye colores extra para mejor contraste y visibilidad
[colors.primary]
background = "{background}"
foreground = "{foreground}"

[colors.selection]
text = "{selection_foreground}"
background = "{selection_background}"

[colors.cursor]
cursor = "{cursor}"
text = "{cursor_text}"

[colors.search.focused_match]
background = "{search_focused_bg}"
foreground = "{search_focused_fg}"

[colors.search.matches]
background = "{search_bg}"
foreground = "{search_fg}"

[colors.hints.start]
background = "{hint_start_bg}"
foreground = "{hint_start_fg}"

[colors.hints.end]
background = "{hint_end_bg}"
foreground = "{hint_end_fg}"

[colors.normal]
black   = "{color0}"
red     = "{color1}"
green   = "{color2}"
yellow  = "{color3}"
blue    = "{color4}"
magenta = "{color5}"
cyan    = "{color6}"
white   = "{color7}"

[colors.bright]
black   = "{color8}"
red     = "{color9}"
green   = "{color10}"
yellow  = "{color11}"
blue    = "{color12}"
magenta = "{color13}"
cyan    = "{color14}"
white   = "{color15}"

