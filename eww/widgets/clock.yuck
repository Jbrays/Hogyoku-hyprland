;; Clock Widgets ;;
(defwidget clock []
  (eventbox :onclick "${EWW_CMD} open --toggle calendar_win" :cursor "pointer"
    (box :class "clock-container bar-button icon-button clock-widget-main" :halign "center" :valign "center" :orientation "v" :spacing 0
      (label :class "clock-hour" :text clock_hour)
      (label :class "clock-min" :text clock_min))))