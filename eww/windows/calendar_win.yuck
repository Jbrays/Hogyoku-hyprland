;; Calendar Window (Geometry replicada de dotfiles-bspwm)
(defwindow calendar_win
  :monitor 0
  :geometry (geometry :x "-10px"
                      :y "50px"
                      :width "0px"
                      :height "0px"
                      :anchor "top center")
  :stacking "fg"
  :focusable "false"
  :wm-ignore true
  (calendar-widget))
